<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lzy.demo.ui.ImsActivity">
    <com.bilibili.magicasakura.widgets.TintToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        style="@style/Widget.App.Toolbar"
        android:background="@color/theme_color_primary"
        app:elevation="4dp"
        android:visibility="gone"
        >

        <RelativeLayout
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            >

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="@dimen/dp_10"
                android:src="@mipmap/back" />


        </RelativeLayout>
    </com.bilibili.magicasakura.widgets.TintToolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:focusable="false"
        android:focusableInTouchMode="true"
        android:scrollbars="none">
    <LinearLayout
        android:id="@+id/center_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/lable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IMS"
                android:textSize="@dimen/x72"
                android:layout_centerHorizontal="true"
                android:textStyle="bold"/>
            <LinearLayout
                android:id="@+id/top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/lable"
                android:orientation="horizontal">
                <View
                    android:layout_width="40dp"
                    android:layout_height="0.1dp"
                    android:layout_gravity="center"
                    android:background="@color/gray_dark"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="智能制造平台"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:textColor="@color/deep_gray_2"/>
                <View
                    android:layout_width="40dp"
                    android:layout_height="0.1dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:background="@color/gray_dark"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/top"
                android:background="@color/white"
                android:paddingTop="@dimen/dp_10"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/top"
                    android:background="@color/white"
                    android:paddingTop="@dimen/dp_10"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        android:text="看板信息"
                        android:padding="@dimen/x5"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:onClick="startBoard"
                        android:layout_margin="@dimen/dp_10"
                        android:drawableTop="@drawable/echart"
                        android:background="@drawable/layout_gray_bg"/>

                    <TextView
                        android:id="@+id/echart_btn"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        android:text="图表"
                        android:onClick="startEchart"
                        android:padding="@dimen/x5"
                        android:layout_margin="@dimen/dp_10"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:drawableTop="@drawable/echart"
                        android:background="@drawable/layout_green_bg"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        android:layout_margin="@dimen/dp_10"
                        android:text="扫码"
                        android:onClick="startQRcode"
                        android:padding="@dimen/x5"
                        android:gravity="center"
                        android:drawableTop="@drawable/echart"
                        android:textColor="@color/white"
                        android:background="@drawable/layout_red_bg"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/top"
                    android:background="@color/white"
                    android:paddingTop="@dimen/dp_10"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        android:text="查询"
                        android:onClick="startCategory"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:padding="@dimen/x5"
                        android:layout_margin="@dimen/dp_10"
                        android:drawableTop="@drawable/echart"
                        android:background="@drawable/layout_pink_bg"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        android:text="物料管理"
                        android:onClick="startMaterialManagement"
                        android:layout_margin="@dimen/dp_10"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:padding="@dimen/x5"
                        android:drawableTop="@drawable/echart"
                        android:background="@drawable/layout_yellow_bg"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        android:layout_margin="@dimen/dp_10"
                        android:text="盘点管理"
                        android:onClick="startInventory"
                        android:gravity="center"
                        android:padding="@dimen/x5"
                        android:drawableTop="@drawable/echart"
                        android:textColor="@color/white"
                        android:background="@drawable/layout_purle_bg"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/top"
                    android:background="@color/white"
                    android:paddingTop="@dimen/dp_10"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        android:text="申请单管理"
                        android:padding="@dimen/x5"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:layout_margin="@dimen/dp_10"
                        android:drawableTop="@drawable/echart"
                        android:background="@drawable/layout_brown_bg"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        android:text="退料管理"
                        android:padding="@dimen/x5"
                        android:layout_margin="@dimen/dp_10"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:drawableTop="@drawable/echart"
                        android:background="@drawable/layout_cyan_bg"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        android:layout_margin="@dimen/dp_10"
                        android:text="锡膏管理"
                        android:padding="@dimen/x5"
                        android:gravity="center"
                        android:drawableTop="@drawable/echart"
                        android:textColor="@color/white"
                        android:background="@drawable/layout_blue_bg"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/top"
                    android:background="@color/white"
                    android:paddingTop="@dimen/dp_10"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        android:text="湿敏元器件"
                        android:padding="@dimen/x5"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:layout_margin="@dimen/dp_10"
                        android:drawableTop="@drawable/echart"
                        android:background="@drawable/layout_brown_bg"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        android:text="备料管理"
                        android:padding="@dimen/x5"
                        android:layout_margin="@dimen/dp_10"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:drawableTop="@drawable/echart"
                        android:background="@drawable/layout_cyan_bg"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        android:layout_margin="@dimen/dp_10"
                        android:text="生产管理"
                        android:padding="@dimen/x5"
                        android:gravity="center"
                        android:drawableTop="@drawable/echart"
                        android:textColor="@color/white"
                        android:background="@drawable/layout_blue_bg"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="@color/gray"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp_10"
                    android:orientation="horizontal">
                    <View
                        android:layout_width="40dp"
                        android:layout_height="0.1dp"
                        android:layout_gravity="center"
                        android:background="@color/gray_dark"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="以下是接口获取功能模块"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:textColor="@color/deep_gray_2"/>
                    <View
                        android:layout_width="40dp"
                        android:layout_height="0.1dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:background="@color/gray_dark"/>
                </LinearLayout>
                <com.lzy.demo.widget.GridViewForScrollView
                    android:id="@+id/gridView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/top"
                    android:focusable="false"
                    android:focusableInTouchMode="true"
                    android:numColumns="3" />
            </LinearLayout>



        </RelativeLayout>
    </LinearLayout>
    </ScrollView>

</RelativeLayout>
